{% extends 'base.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
    <section class="bg-light p-3">
        <h1>Les produits</h1>
    </section>

    <div class="container">
    
        <section class="row text-center">

            {% for product in products %}

                <div class="col">
                    <div class="border border-dark rounded p-2 clearfix">

                        <h2>{{ product.title }}</h2>
                        <p>{{ product.price }} â‚¬</p>

                        <img src="{{ asset('uploads/') ~ product.image }}" alt="" width="200px">

                        <hr>

                        <a href="{{ path("cart_add", {id: product.id}) }}" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i> Ajouter
                        </a>

                    </div>
                </div>

            {% endfor %}

            <br><br><br>

            <div class="d-flex justify-content-center" style="margin-top: 50px;">
                {{ knp_pagination_render(products, 'products/pagination.html.twig') }}
            </div>
            
        </section>

    </div>

    
{% endblock %}


